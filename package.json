{
  "name": "timdeschryver.dev",
  "author": "Tim Deschryver",
  "description": "timdeschryver.dev",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "preexport": "rm -rf static/posts && copyfiles \"content/posts/**\" static -u 1",
    "export": "sapper export --legacy",
    "export:lambda": "rollup -c rollup.lambda.config.js",
    "start": "node __sapper__/build",
    "test": "run-p --race dev cy:run",
    "now-build": "npm run export"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run export && lint-staged && npm run export:lambda"
    }
  },
  "lint-staged": {
    "*.{svelte,js,md}": [
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@polka/send": "^0.4.0",
    "@sveltejs/site-kit": "^1.0.4",
    "apollo-boost": "0.4.2",
    "apollo-server": "^2.6.3",
    "apollo-server-express": "^2.6.3",
    "apollo-server-micro": "^2.6.3",
    "compression": "^1.7.1",
    "glob": "^7.1.4",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "marked": "^0.6.2",
    "polka": "^0.5.0",
    "prismjs": "^1.16.0",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "copyfiles": "^2.1.0",
    "date-fns": "^1.30.1",
    "dotenv-extended": "^2.4.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-svelte3": "^1.1.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sapper": "^0.26",
    "svelte": "^3.0.0"
  },
  "license": "MIT"
}
