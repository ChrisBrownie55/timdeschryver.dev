*
  margin 0
  padding 0
  + *
    margin-top 1.5em

*
*:before
*:after 
  box-sizing inherit


html
body 
  height 100%
  color #444
  margin-top 0

html
   box-sizing border-box

body
  line-height 1.8

main 
  margin-left auto
  margin-right auto
  max-width 47rem
  padding 2.625rem 1.3125rem

ul 
  list-style inside
  list-style-type square

ol
  list-style inside
  list-style-type decimal

li 
  margin-top calc(1.5em / 2)
  line-height 1.3

img
  max-width: 100%

h1
h2 
h3
h4
  color #000
  line-height 1.2

a 
  text-decoration none
  color #0000ee

blockquote
  font-style italic
  padding-left 2.5rem
  padding-right 2.5rem
  line-height 1.6
  border-left .3rem solid
