*
  margin 0
  padding 0
  + *
    margin-top 1.5em

*
*:before
*:after
  box-sizing inherit

ul
  list-style inside
  list-style-type square

ol
  list-style inside
  list-style-type decimal

li
  margin-top calc(1.5em / 2)
  line-height 1.3

img
  max-width: 100%

h1
h2
h3
h4
  color #000
  line-height 1.2
  font-family "Poiret One", monospace

a
  text-decoration none
  color #031ef4

blockquote
  font-style italic
  padding-left 2.5rem
  padding-right 2.5rem
  line-height 1.6
  border-left .3rem solid
